<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/margin_linear_layout"
        android:layout_width="349dp"
        android:layout_height="45dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/bg_corner_fill_all_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/medical_type_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_weight="2.4"
            android:singleLine="true"
            android:text="@string/example_medical_type"
            android:textColor="#333333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/medical_unit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="@string/example_medical_unit"
            android:textColor="#666666"
            android:textSize="11sp" />

        <CheckBox
            android:id="@+id/checkbox"
            android:tag="111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16sp" />

    </LinearLayout>

</LinearLayout>

